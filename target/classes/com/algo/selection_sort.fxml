<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@images%20and%20stylesheets/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algo.SelectionSortController">
    <children>
        <Label alignment="CENTER" prefHeight="92.0" prefWidth="241.0" stylesheets="@images%20and%20stylesheets/styles.css" text="SELECTION SORT">
            <font>
                <Font name="Arial Black" size="22.0" />
            </font>
        </Label>
        <HBox spacing="10">
            <Label prefHeight="17.0" prefWidth="223.0" text="                   Number of elements:">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="numElementsField" prefHeight="25.0" prefWidth="186.0" promptText="Enter number of elements" />
        </HBox>
        <HBox spacing="10">
            <Label prefHeight="17.0" prefWidth="228.0" text="                                     Elements:">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="elementsField" prefHeight="25.0" prefWidth="334.0" promptText="Enter elements separated by spaces" />
        </HBox>
        <Button onAction="#handleSelectionSort" text="Start Selection Sort" />
        <HBox fx:id="barContainer" spacing="5" />
        <Button onAction="#handleBack" text="Back" />
    </children>
</VBox>
