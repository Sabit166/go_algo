    <children>
        <TextField fx:id="inputField" promptText="Enter numbers separated by commas"/>
        <Button text="Start Selection Sort" onAction="#handleSelectionSort"/>
        <HBox fx:id="barContainer" spacing="5"/>
        <Button text="Back" onAction="#handleBack"/>
    </children>
</VBox>