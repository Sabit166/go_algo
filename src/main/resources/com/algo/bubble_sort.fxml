<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algo.BubbleSortController">
    <children>
        <TextField fx:id="inputField" promptText="Enter numbers separated by commas"/>
        <Button text="Start Bubble Sort" onAction="#handleBubbleSort"/>
        <HBox fx:id="barContainer" spacing="5"/>
        <Button text="Back" onAction="#handleBack"/>
    </children>
</VBox>