<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algo.BinarySearchController">
    <children>
        <TextField fx:id="numElementsField" promptText="Enter number of elements"/>
        <TextField fx:id="inputField" promptText="Enter sorted numbers separated by commas"/>
        <TextField fx:id="searchField" promptText="Enter number to search"/>
        <Button text="Start Binary Search" onAction="#handleBinarySearch"/>
        <HBox fx:id="barContainer" spacing="5"/>
        <HBox spacing="10">
            <Label text="Start: Blue Arrow"/>
            <Label text="End: Red Arrow"/>
            <Label text="Mid: Green Arrow"/>
        </HBox>
        <Label fx:id="foundLabel" text="" style="-fx-text-fill: green;"/>
        <Button text="Back" onAction="#handleBack"/>
    </children>
</VBox>