<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algo.StackVisualizationController">
    <Text text="Stack Visualization (LIFO)" style="-fx-font-size: 24px;"/>
    <Label text="Select Data Type:"/>
    <ComboBox fx:id="dataTypeComboBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Integer"/>
                <String fx:value="Character"/>
                <String fx:value="String"/>
            </FXCollections>
        </items>
    </ComboBox>
    <TextField fx:id="inputField" promptText="Enter value to push"/>
    <HBox fx:id="stackContainer" spacing="5.0" style="-fx-border-color: black; -fx-padding: 10;"/>
    <Button text="Push" onAction="#handlePush"/>
    <Button text="Pop" onAction="#handlePop"/>
    <Button text="Top" onAction="#handleTop"/>
    <Button text="Back" onAction="#handleBack" alignment="BOTTOM_LEFT"/>
</VBox>